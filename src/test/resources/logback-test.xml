<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<contextName>rest-sample-test</contextName>

	<jmxConfigurator />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.hoopladigital.mapper.PersonMapper" level="TRACE"/>
	<logger name="com.hoopladigital.mapper.PetMapper" level="TRACE"/>

	<root level="INFO">
		<appender-ref ref="console"/>
	</root>

</configuration>
